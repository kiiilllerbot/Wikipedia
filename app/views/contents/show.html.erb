<div class="row">
  <div class="col-md-12" style="margin-top: 5vh">
    <div class="card">
      <div class="card-body">
        <h4><strong><%= @content.title %></strong></h4>
    <hr class="my-1">
    <p>From Wikipedia, the free encyclopedia</p>
    <p class="text-justify"><%= @content.description.html_safe %></p>

    <%= link_to "Back", contents_path %>
    
    <% if can? :update, @content %>
    |
        <%= link_to "Edit",edit_content_path  %>
    <% end %>
    
    <% if can? :destroy, @content %>
    |
        <%= link_to "Delete",content_path,method: :delete,data:{confirm:'Are you sure?'} %>
    <% end %>
    
    <% if user_signed_in? %>
    |
        <% if can? :create, @content %>
            <%= link_to "New Article",new_content_path %>
        <% end %>
    <% end %>
    </div>
  </div>
</div>
