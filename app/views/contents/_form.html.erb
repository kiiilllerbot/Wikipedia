<%= simple_form_for(@content) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title,label:false,placeholder:'Title' %>
    <%= f.input :body,label:false,placeholder:'Body' %>
    <%= f.association :category,label:false,prompt:'Category' %>
    <%= f.input :description,label:false,placeholder:'Description', input_html: {rows: 8}%>
    <%= f.association :user ,as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,"Submit",:class=>"btn btn-sm btn-primary ml-0" %>
    <%= link_to "Cancel", root_path, :class=>"btn btn-sm btn-info"%>
  </div>
<% end %>
